try:
    num = int(input("Введите целое положительное число: ")) # ввод числа пользователем
    if num < 0: # проверка положительное ли это число
        print("Число должно быть положительным")
    else:
        num_str = str(num) # перевод числа в строку
    if len(num_str) == 1: # вывод числа без изменений если однозначное
        print(num)
    else:
        num2 = int(num_str[-1] + num_str[1:-1] + num_str[0]) # смена символов
        print(num2)
except ValueError: # проверка на ввод символов
    print ("Нельзя вводить дробные числа и не числа!")
